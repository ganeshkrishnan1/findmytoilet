<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_floating_material_light">

    <!-- The main content view -->
    <android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:context=".MainActivity2">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/main_color_500"
                app:popupTheme="@style/AppTheme.PopupOverlay" />

        </android.support.design.widget.AppBarLayout>

        <FrameLayout
            android:id="@+id/content_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.nirhart.parallaxscroll.views.ParallaxScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:parallax_factor="1.9"
                tools:context=".MainActivity">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imgParallax"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <ScrollView
                        android:id="@+id/scrollView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/background_floating_material_light">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txtHomeMessage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:text="Welcome Message"
                                android:textSize="20dp" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="20dp"
                                android:background="@android:color/darker_gray" />

                            <TextView
                                android:id="@+id/txtCampgrounds"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:background="@color/background_floating_material_light"
                                android:paddingLeft="20dp"
                                android:paddingRight="10dp"
                                android:paddingTop="20dp"
                                android:text="Campgrounds\n"
                                android:textColor="@color/cFont"
                                android:textSize="20dp" />

                            <Gallery
                                android:id="@+id/galleryOne"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:spacing="5dp" />

                            <TextView
                                android:id="@+id/txtCampgroundsName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:textSize="20dp" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="20dp"
                                android:background="@android:color/darker_gray" />

                            <TextView
                                android:id="@+id/txtHostels"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:textColor="@color/cFont"
                                android:background="@color/background_floating_material_light"
                                android:onClick="onClickCategory"
                                android:paddingLeft="20dp"
                                android:paddingRight="10dp"
                                android:paddingTop="20dp"
                                android:text="Hostels\n"
                                android:textSize="20dp" />

                            <Gallery
                                android:id="@+id/galleryTwo"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:spacing="5dp" />

                            <TextView
                                android:id="@+id/txtHostelsName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:spacing="5dp"
                                android:textSize="20dp" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="20dp"
                                android:background="@android:color/darker_gray" />

                            <TextView
                                android:id="@+id/txtDayUseArea"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:onClick="onClickCategory"
                                android:paddingLeft="20dp"
                                android:textColor="@color/cFont"
                                android:background="@color/background_floating_material_light"
                                android:paddingRight="10dp"
                                android:paddingTop="20dp"
                                android:text="Day Use Area\n"
                                android:textSize="20dp" />

                            <Gallery
                                android:id="@+id/galleryThree"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:spacing="5dp" />

                            <TextView
                                android:id="@+id/txtDayUseAreaName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:textSize="20dp" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="20dp"
                                android:background="@android:color/darker_gray" />

                            <TextView
                                android:id="@+id/txtPointsOfInterest"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:onClick="onClickCategory"
                                android:paddingLeft="20dp"
                                android:paddingRight="10dp"
                                android:textColor="@color/cFont"
                                android:background="@color/background_floating_material_light"

                                android:paddingTop="20dp"
                                android:text="Points Of Interest\n"
                                android:textSize="20dp" />

                            <Gallery
                                android:id="@+id/galleryFour"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:spacing="5dp" />

                            <TextView
                                android:id="@+id/txtPointsOfInterestName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:textSize="20dp" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="20dp"
                                android:background="@android:color/darker_gray" />

                            <TextView
                                android:id="@+id/txtInfocenter"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:onClick="onClickCategory"
                                android:paddingLeft="20dp"
                                android:paddingRight="10dp"
                                android:paddingTop="20dp"
                                android:textColor="@color/cFont"
                                android:background="@color/background_floating_material_light"

                                android:text="Infocenter\n"
                                android:textSize="20dp" />

                            <Gallery
                                android:id="@+id/galleryFive"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:spacing="5dp" />

                            <TextView
                                android:id="@+id/txtInfocenterName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:textSize="20dp" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="20dp"
                                android:background="@android:color/darker_gray" />

                            <TextView
                                android:id="@+id/txtToilets"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:onClick="onClickCategory"
                                android:paddingLeft="20dp"
                                android:textColor="@color/cFont"
                                android:background="@color/background_floating_material_light"

                                android:paddingRight="10dp"
                                android:paddingTop="20dp"
                                android:text="Toilets\n"
                                android:textSize="20dp" />

                            <Gallery
                                android:id="@+id/gallerySix"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:spacing="5dp" />

                            <TextView
                                android:id="@+id/txtToiletsName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:textSize="20dp" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="20dp"
                                android:background="@android:color/darker_gray" />

                            <TextView
                                android:id="@+id/txtShowers"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:onClick="onClickCategory"
                                android:paddingLeft="20dp"
                                android:paddingRight="10dp"
                                android:paddingTop="20dp"
                                android:textColor="@color/cFont"
                                android:background="@color/background_floating_material_light"
                                android:text="Showers\n"
                                android:textSize="20dp" />

                            <Gallery
                                android:id="@+id/gallerySeven"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:spacing="5dp" />

                            <TextView
                                android:id="@+id/txtShowersName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:textSize="20dp" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="20dp"
                                android:background="@android:color/darker_gray" />

                            <TextView
                                android:id="@+id/txtDrinkingWater"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:onClick="onClickCategory"
                                android:paddingLeft="20dp"
                                android:paddingRight="10dp"
                                android:paddingTop="20dp"
                                android:textColor="@color/cFont"
                                android:background="@color/background_floating_material_light"
                                android:text="Drinking Water\n"
                                android:textSize="20dp" />

                            <Gallery
                                android:id="@+id/galleryEight"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:spacing="5dp" />

                            <TextView
                                android:id="@+id/txtDrinkingWaterName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:textSize="20dp" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="20dp"
                                android:background="@android:color/darker_gray" />

                            <TextView
                                android:id="@+id/txtCaravanParks"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:onClick="onClickCategory"
                                android:paddingLeft="20dp"
                                android:paddingRight="10dp"
                                android:paddingTop="20dp"
                                android:text="Caravan Parks\n"
                                android:textColor="@color/cFont"
                                android:background="@color/background_floating_material_light"
                                android:textSize="20dp" />

                            <Gallery
                                android:id="@+id/galleryNine"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:spacing="5dp" />

                            <TextView
                                android:id="@+id/txtCaravanParksName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:textSize="20dp" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="20dp"
                                android:background="@android:color/darker_gray" />

                            <TextView
                                android:id="@+id/txtBBQSpots"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:onClick="onClickCategory"
                                android:paddingLeft="20dp"
                                android:paddingRight="10dp"
                                android:paddingTop="20dp"
                                android:textColor="@color/cFont"
                                android:background="@color/background_floating_material_light"
                                android:text="BBQ Spots\n"
                                android:textSize="20dp" />

                            <Gallery
                                android:id="@+id/galleryTen"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:spacing="5dp" />

                            <TextView
                                android:id="@+id/txtBBQSpotsName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:textSize="20dp" />

                        </LinearLayout>
                    </ScrollView>

                </LinearLayout>

            </com.nirhart.parallaxscroll.views.ParallaxScrollView>

        </FrameLayout>

    </android.support.design.widget.CoordinatorLayout>


    <!-- The navigation drawer -->
    <!--<ListView android:id="@+id/left_drawer"-->
    <!--android:layout_width="240dp"-->
    <!--android:layout_height="match_parent"-->
    <!--android:layout_gravity="start"-->
    <!--android:choiceMode="singleChoice"-->
    <!--android:divider="@android:color/transparent"-->
    <!--android:dividerHeight="0dp"-->
    <!--android:background="#ffffff"/>-->

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:itemTextColor="@color/cFont"
        app:menu="@menu/categories_drawer" />
</android.support.v4.widget.DrawerLayout>

