<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_floating_material_light">

    <!-- The main content view -->
    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.nirhart.parallaxscroll.views.ParallaxScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:parallax_factor="1.9"
            tools:context=".MainActivity" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imgParallax" />

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/scrollView"
                    android:background="@color/background_floating_material_light">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Welcome Message"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:id="@+id/txtHomeMessage"
                            android:textSize="20dp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="20dp"
                            android:background="@android:color/darker_gray"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Campgrounds\n"
                            android:id="@+id/txtCampgrounds"
                            android:background="@color/title_background_color"
                            android:paddingTop="20dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:textSize="20dp"
                            android:onClick="onClickCategory"
                            />

                        <Gallery
                            android:id="@+id/galleryOne"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:spacing="5dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/txtCampgroundsName"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:textSize="20dp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="20dp"
                            android:background="@android:color/darker_gray"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Hostels\n"
                            android:id="@+id/txtHostels"
                            android:background="@color/title_background_color"
                            android:paddingTop="20dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:textSize="20dp"
                            android:onClick="onClickCategory" />

                        <Gallery
                            android:id="@+id/galleryTwo"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:spacing="5dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/txtHostelsName"
                            android:textSize="20dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:spacing="5dp"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="20dp"
                            android:background="@android:color/darker_gray"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Day Use Area\n"
                            android:id="@+id/txtDayUseArea"
                            android:background="@color/title_background_color"
                            android:paddingTop="20dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:textSize="20dp"
                            android:onClick="onClickCategory" />

                        <Gallery
                            android:id="@+id/galleryThree"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:spacing="5dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/txtDayUseAreaName"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:textSize="20dp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="20dp"
                            android:background="@android:color/darker_gray"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Points Of Interest\n"
                            android:id="@+id/txtPointsOfInterest"
                            android:background="@color/title_background_color"
                            android:paddingTop="20dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:textSize="20dp"
                            android:onClick="onClickCategory" />

                        <Gallery
                            android:id="@+id/galleryFour"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:spacing="5dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/txtPointsOfInterestName"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:textSize="20dp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="20dp"
                            android:background="@android:color/darker_gray"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Infocenter\n"
                            android:id="@+id/txtInfocenter"
                            android:background="@color/title_background_color"
                            android:paddingTop="20dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:textSize="20dp"
                            android:onClick="onClickCategory" />

                        <Gallery
                            android:id="@+id/galleryFive"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:spacing="5dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/txtInfocenterName"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:textSize="20dp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="20dp"
                            android:background="@android:color/darker_gray"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Toilets\n"
                            android:id="@+id/txtToilets"
                            android:background="@color/title_background_color"
                            android:paddingTop="20dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:textSize="20dp"
                            android:onClick="onClickCategory" />

                        <Gallery
                            android:id="@+id/gallerySix"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:spacing="5dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/txtToiletsName"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:textSize="20dp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="20dp"
                            android:background="@android:color/darker_gray"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Showers\n"
                            android:id="@+id/txtShowers"
                            android:background="@color/title_background_color"
                            android:paddingTop="20dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:textSize="20dp"
                            android:onClick="onClickCategory" />

                        <Gallery
                            android:id="@+id/gallerySeven"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:spacing="5dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/txtShowersName"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:textSize="20dp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="20dp"
                            android:background="@android:color/darker_gray"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Drinking Water\n"
                            android:id="@+id/txtDrinkingWater"
                            android:background="@color/title_background_color"
                            android:paddingTop="20dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:textSize="20dp"
                            android:onClick="onClickCategory" />

                        <Gallery
                            android:id="@+id/galleryEight"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:spacing="5dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/txtDrinkingWaterName"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:textSize="20dp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="20dp"
                            android:background="@android:color/darker_gray"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Caravan Parks\n"
                            android:id="@+id/txtCaravanParks"
                            android:background="@color/title_background_color"
                            android:paddingTop="20dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:textSize="20dp"
                            android:onClick="onClickCategory" />

                        <Gallery
                            android:id="@+id/galleryNine"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:spacing="5dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/txtCaravanParksName"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:textSize="20dp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="20dp"
                            android:background="@android:color/darker_gray"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="BBQ Spots\n"
                            android:id="@+id/txtBBQSpots"
                            android:background="@color/title_background_color"
                            android:paddingTop="20dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:textSize="20dp"
                            android:onClick="onClickCategory" />

                        <Gallery
                            android:id="@+id/galleryTen"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:spacing="5dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/txtBBQSpotsName"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:textSize="20dp" />

                    </LinearLayout>
                </ScrollView>

            </LinearLayout>

        </com.nirhart.parallaxscroll.views.ParallaxScrollView>

    </FrameLayout>

    <!-- The navigation drawer -->
    <ListView android:id="@+id/left_drawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:background="#ffffff"/>
</android.support.v4.widget.DrawerLayout>

